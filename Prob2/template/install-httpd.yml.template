- name: Install and configure HTTPd server
  hosts: 192.168.33.{{ip2}}
  become: yes

  tasks:
    - name: Install Apache2
      apt:
        name: apache2
        state: present
      when: ansible_os_family == 'Debian'
    
    - name: Install PHP8.2
      apt:
        name: "{{ item }}"
        state: present
      loop:
        - php8.2
        - php8.2-cli
        - php8.2-mysql
      when: ansible_os_family == 'Debian'